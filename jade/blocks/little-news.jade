mixin little-news(category,title,time,pink,exclusive)
  // little-news
  if pink 
    article.little-news.little-news--pink
      a(href="#") 
        if exclusive
          .little-news__category.little-news__category--exclusive= category
        else
          .little-news__category= category
        h1.little-news__title
          != title
        .little-news__time= time
  else 
    article.little-news.little-news--white
      a(href="#") 
        .little-news__category= category
        h2.little-news__title
          != title
        .little-news__time= time
  //	/little-news